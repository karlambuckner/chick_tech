<h1><%= @question.heading %></h1>
<p><%= @question.post %></p>

<% if @question.answers.any? %>
  <h4>Here are the answers for this question:</h4>

  <ul>
    <% @question.answers.each do |answer| %>
      <li>
        <%= answer.body %> |
        <%= link_to "Edit", edit_question_answer_path(@question, answer) %> |
        <%= link_to "Delete", question_answer_path(@question, answer),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no answers yet!</p>
<% end %>

<p><%= link_to "Add an answer", new_question_answer_path(@question) %></p>
<p><%= link_to "Edit", edit_question_path(@question) %></p>
<p><%= link_to "Delete", question_path(@question),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to questions", questions_path %></p>
